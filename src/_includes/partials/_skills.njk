<!-- Skills Section -->
<section id="skills" class="py-20 border-t border-border-light dark:border-border-dark">
  <h2 class="text-3xl font-bold mb-8 text-center">Technical Expertise</h2>
  <div class="flex flex-wrap justify-center gap-4" role="list">
    {% for skill in author.skills %}
      {% for tool in skill.tools %}
        <span
          class="flex items-center subpixel-antialiased highlight rounded-full bg-muted-light dark:bg-muted-dark px-4 py-2 text-sm
            font-medium"
          role="listitem">{{ tool.language }}
          {% if tool.icon %}
            &nbsp;{{ tool.icon | safe }}
          {% endif %}
        </span>
      {% endfor %}
    {% endfor %}
  </div>
</section>