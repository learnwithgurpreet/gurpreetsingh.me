<!-- Contact Section -->
<section id="contact" class="py-20 border-t border-border text-center">
  <h2 class="text-3xl font-bold tracking-tighter mb-4">Get in Touch</h2>
  <p class="text-muted-foreground mb-8 mx-auto max-w-lg">
                    Interested in collaborating or have a question? I'd love to hear from you.
                </p>
  <div class="flex justify-center gap-6">
    {% for item in author.connect %}
      <a aria-label="{{ item.name }}" href="{{ item.url }}" rel="me" target="_blank" class="inline-flex w-12 h-12 justify-center items-center ml-2 rounded-full highlight hover:shadow-lg duration-150 text-muted-foreground hover:text-primary transition-all">
        {% if item.icon %}
          {{ item.icon | safe }}
        {% endif %}
      </a>
    {% endfor %}
  </div>
</section>